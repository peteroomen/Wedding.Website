extends shared/layout.pug
block content
  div(class="container") 
      div(class="section")
        br
        h4 Gift Registry
        br
        br

        div(class="row")
          each gift in gifts
            div(class="col s4")
              div(class="card")
                div(class="card-image")
                  img(src=gift.imageUri)
                  a(class="btn-floating halfway-fab waves-effect waves-light red tooltipped" data-position="bottom" data-tooltip="I will purchase this")
                    i(class="material-icons") attach_money

                div(class="card-content")
                  span(class="card-title")= gift.name
                  p
                    b= gift.specifications
                  p= gift.description

                div(class="card-action")
                  a(href=gift.purchaseUri target="_blank") Purchase

  script.
    document.addEventListener('DOMContentLoaded', function() {
      var elems = document.querySelectorAll('.tooltipped');
      var instances = M.Tooltip.init(elems, {});
    });